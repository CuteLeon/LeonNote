@model  User

@{
    ViewBag.Title = "用户登录";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false);
    <div class="container">
        <div class="form-group">
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "请输入用户名" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "请输入密码" })
        </div>
        <div class="btn-group float-right">
            <button type="submit" class="btn btn-primary" id="LoginButton">登录</button>
            <button type="button" class="btn btn-secondary" id="RegisterButton" onclick="/Account/Register">注册</button>
        </div>
        <div class="clearfix"></div>
    </div>
}

<script>
    $(function () {
        $("#RegisterButton").click(function () {
            location.href = "@Url.Content("~/Account/Register")";
        })
    });
</script>