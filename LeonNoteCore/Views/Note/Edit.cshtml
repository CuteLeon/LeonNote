@model LeonNoteCore.Models.Note

@{
    ViewData["Title"] = "编辑笔记";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(false);
    <h5>正在编辑 : 《@Model.Title》</h5>
    <hr />

    <div class="form-group">
        @Html.LabelFor(n => n.Title)
        @Html.TextBoxFor(n => n.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Content)
        @Html.TextBoxFor(n => n.Content, new { @class = "form-control" })
    </div>
    
    <div class="btn-group">
        <button type="submit" class="btn btn-primary">保存</button>
        @Html.ActionLink("返回列表", "Index", "Home", new { area = "" }, new { @class = "btn btn-success" })
    </div>
}